<UserControl x:Class="minesweeper.MineButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:minesweeper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Name="rect" Fill="White" StrokeThickness="1" Stroke="Black" />
        <Label Name="text" FontSize="15"  Background="Transparent" Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button Name="button" Background="Transparent" BorderThickness="0" PreviewMouseDown="button_PreviewMouseDown"/>
    </Grid>
</UserControl>
