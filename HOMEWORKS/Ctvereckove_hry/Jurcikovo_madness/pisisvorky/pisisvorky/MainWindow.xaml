<Window x:Class="pisisvorky.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pisisvorky"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10 0">
            <Label Content="Na rade je:" VerticalAlignment="Center" FontSize="20"/>
            <Label Content="{Binding CurrentPlayer}" Name="PlayDisplay" FontSize="20" Foreground="{Binding PlayerColor}"/>
        </StackPanel>
        


        <Grid Grid.Row="1" Name="MainGrid">
            
        </Grid>
    </Grid>
</Window>
