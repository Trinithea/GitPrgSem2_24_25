<Window x:Class="_2047.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2047"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="800"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Score: " FontSize="22" />
            <Label Content="{Binding Score}" FontSize="22" />
        </StackPanel>
        <Border Grid.Row="1" BorderThickness="2" BorderBrush="Black"/>
        <Grid Name="MainGrid" Grid.Row="1"  />
    </Grid>
</Window>
